<%= content_for :title, @journey.category.capitalize %>

<h1 class="govuk-heading-xl"><%= @journey.category.capitalize %></h1>
<dl class="govuk-summary-list">
  <% @steps.each do |step| %>
    <% if step.question? %>
      <% if step.answer %>
        <%= render "#{step.contentful_type}_answer", step: step, answer: step.answer %>
      <% else %>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key"><%= step.title %></dt>
        <dd class="govuk-summary-list__value"><%= "Not started" %></dd>
        <dd class="govuk-summary-list__actions"><%= link_to "Start", journey_step_path(@journey, step), class: "govuk-link" %></dd>
      </div>
      <% end %>
    <% end %>
  <% end %>
</dl>

<h1 class="govuk-heading-l"><%= I18n.t("journey.specification.header") %></h1>
<%= link_to "Download (.docx)", journey_path(@journey, format: :docx), class: "govuk-button" %>
<%= @specification_template.render(@answers).html_safe %>
