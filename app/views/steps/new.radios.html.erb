<%= content_for :title, @step.title %>

<%= form_for @answer, as: :answer, url: journey_step_answers_path(@journey, @step), method: "post" do |f| %>
  <%= f.hidden_field :response, value: nil %>
  <%= f.govuk_collection_radio_buttons :response,
    @step.radio_options,
    :id,
    ->(option) { option.name },
    :description,
    legend: { text: @step.title, size: 'xl' },
    hint: { text: @step.help_text },
    inline: false
  %>
  <%= f.submit I18n.t("generic.button.soft_finish"), class: "govuk-button" %>
<% end %>
